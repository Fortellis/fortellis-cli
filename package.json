{
  "name": "@fortellis/fortellis-cli",
  "description": "Command Line for Fortellis API Specs",
  "version": "0.0.1-alpha.9",
  "author": "Fortellis",
  "bin": {
    "fortellis-cli": "./bin/run"
  },
  "bugs": {
    "url": "https://github.com/Fortellis/fortellis-cli/issues"
  },
  "dependencies": {
    "@oclif/command": "^1.5.19",
    "@oclif/config": "^1.13.3",
    "@oclif/plugin-help": "^2.2.2",
    "@stoplight/spectral": "4.0.2",
    "@stoplight/types": "^11.4.0",
    "@stoplight/yaml": "3.5.0",
    "axios": "^0.21.2",
    "colors": "^1.4.0",
    "globby": "^10.0.1",
    "inquirer": "^7.0.1",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "request": "^2.88.0",
    "stoplight": "0.0.7"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.2",
    "eslint": "^5.16.0",
    "eslint-config-oclif": "^3.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.0.6",
    "jest": "^24.8.0",
    "chai": "^4.2.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prettier-eslint-cli": "^5.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/src"
  ],
  "homepage": "https://github.com/Fortellis/fortellis-cli",
  "keywords": [
    "oclif",
    "fortellis"
  ],
  "license": "MIT",
  "main": "src/index.js",
  "oclif": {
    "commands": "./src/commands",
    "bin": "fortellis-cli",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fortellis/fortellis-cli.git"
  },
  "scripts": {
    "test": "jest --runInBand",
    "lint": "eslint '**/*.{js,json}' --fix",
    "format": "prettier-eslint '**/*.{js,json}' --write",
    "version": "oclif-dev readme && git add README.md"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "eslint --fix",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "git secrets --pre_commit_hook -- $@ && lint-staged && npm test"
    }
  }
}
